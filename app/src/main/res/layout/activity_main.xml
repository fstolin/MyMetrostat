<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10sp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorLightGray">

    <ImageView
        android:id="@+id/myMainImage"
        android:src="@drawable/my_train_image"
        android:layout_width="match_parent"
        android:layout_height="160sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="MyMetrostat"
        android:textSize="26sp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"/>

    <TextView
        android:id="@+id/defTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/welcomeString"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/failTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="invisible"
            android:text="@string/failedString"
            android:textSize="16sp"
            android:textColor="@color/colorRed"
            android:fontFamily="sans-serif-light"
            android:gravity="center"/>

        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="12dp"
            android:text="@string/startButtonString"
            android:backgroundTint="@color/colorPrimaryDark"
            android:padding="15dp"
            android:gravity="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/statsButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:fontFamily="sans-serif-light"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginTop="8dp"
            android:text="@string/statsButtonString"
            android:padding="15dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/copyrightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/copyrightString"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            android:gravity="center"/>

    </LinearLayout>



</LinearLayout>